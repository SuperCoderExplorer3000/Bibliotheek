@page
@model WebApplicatieBibliotheek.Pages.UpdatenModel
@{
	ViewData["Title"] = "Updaten";

	<h1> Boek updaten </h1>

	<form method="post">
		<div class="form-group">
			<label for="boekid">Boek ID</label>
			<input type="number" class="form-control" id="boekid" name="boekid">
		</div>
		<div class="form-group">
			<label for="isbn">ISBN</label>
			<input type="text" class="form-control" id="isbn" name="isbn">
		</div>
		<div class="form-group">
			<label for="paginas">Paginas</label>
			<input type="number" class="form-control" id="paginas" name="paginas">
		</div>
		<div class="form-group">
			<label for="titel">Titel</label>
			<input type="text" class="form-control" id="titel" name="titel">
		</div>
		<div class="form-group">
			<label for="genreid">Genre ID</label>
			<input type="number" class="form-control" id="genreid" name="genreid">
		</div>
		<div class="form-group">
			<label for="uitgever">Uitgever</label>
			<input type="text" class="form-control" id="uitgever" name="uitgever">
		</div>
		<div class="form-group">
			<label for="auteur">Auteur</label>
			<input type="text" class="form-control" id="auteur" name="auteur">
		</div>
		<div class="form-group">
			<label for="taal">Taal</label>
			<input type="text" class="form-control" id="taal" name="taal">
		</div>
		<div class="form-group">
			<label for="graad">Graad</label>
			<input type="text" class="form-control" id="graad" name="graad">
		</div>

		<button type="submit" class="btn btn-primary">Updaten</button>

	</form>
		<br />

	@if (Model.Bericht != null)
	{
		<div class="alert alert-info mt-3">
			@Model.Bericht
		</div>
	}
	
}
